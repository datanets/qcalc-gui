<Window x:Class="qcalc_gui.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Canvas>
            <Label Canvas.Top="0">Quaternion A</Label>
            <TextBox Name="QuatABox" Canvas.Top="20" Width="100">1,2,3,4</TextBox>
            <Label Canvas.Top="40">Quaternion B</Label>
            <TextBox Name="QuatBBox" Canvas.Top="60" Width="100">5,6,7,8</TextBox>
            <Label Canvas.Top="80">Result</Label>
            <TextBox Name="ResultBox" Canvas.Top="100" Width="100"></TextBox>
            <Button Canvas.Top="0" Canvas.Left="300" Click="AddButtonClick">Add</Button>
            <Button Canvas.Top="20" Canvas.Left="300" Click="SubtractButtonClick">Subtract</Button>
            <Button Canvas.Top="40" Canvas.Left="300" Click="MultiplyButtonClick">Multiply</Button>
            <Button Canvas.Top="60" Canvas.Left="300" Click="DivideButtonClick">Divide</Button>
        </Canvas>
    </Grid>
</Window>
